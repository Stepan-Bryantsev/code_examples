<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="300.0" prefWidth="400.0" stylesheets="@css/general-style.css"
  xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  alignment="CENTER" spacing="15"
  fx:controller="ru.hse.edu.phone.View.EditContactController">
  <VBox alignment="CENTER_LEFT" spacing="4">
    <AnchorPane>
      <Label text="Фамилия:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="lastNameMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="lastNameField" minWidth="200" promptText="Введите фамилию контакта" />
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Имя:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="firstNameMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="firstNameField" minWidth="200" promptText="Введите имя контакта" />
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Отчество:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="secondNameMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="secondNameField" minWidth="200" promptText="Введите отчество контакта" />
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Мобильный телефон:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="mobilePhoneMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="mobilePhoneField" minWidth="200" promptText="Введите мобильный телефон контакта" />
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Домашний телефон:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="homePhoneMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="homePhoneField" minWidth="200" promptText="Введите домашний телефон контакта" />
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Адрес:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="addressMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="addressField" minWidth="200" promptText="Введите адрес контакта"/>
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="День рождения:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="birthdayMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <HBox spacing="15">
      <DatePicker fx:id="birthdayField" minWidth="200" promptText="Укажите день рождения контакта" editable="false"/>
      <Button fx:id="cleanBirthday" text="X" stylesheets="css/clean-button-style.css"/>
    </HBox>
  </VBox>
  <VBox alignment="CENTER_LEFT" spacing="5">
    <AnchorPane>
      <Label text="Комментарий:" AnchorPane.leftAnchor="5"/>
      <Label fx:id="commentMessageField" AnchorPane.rightAnchor="10"/>
    </AnchorPane>
    <TextField fx:id="commentField" minWidth="200" promptText="Введите комментарий контакта" />
  </VBox>
  <padding>
    <Insets bottom="10" left="20.0" right="20.0" top="10.0" />
  </padding>
  <HBox alignment="CENTER" spacing="25">
    <Button fx:id="cancelButton" text="Отмена" HBox.hgrow="ALWAYS"/>
    <Button fx:id="okButton" text="Ок" HBox.hgrow="NEVER"/>
  </HBox>

</VBox>
